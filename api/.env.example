# Anthropic API key for Claude LLM responses
ANTHROPIC_API_KEY=sk-ant-...

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:3000

# Port (default 8000)
PORT=8000

# Clerk JWT verification (set to your Clerk Frontend API URL)
CLERK_JWT_ISSUER=https://YOUR_FRONTEND_API.clerk.accounts.dev

# Set to false when Next.js frontend handles routing (Railway production)
SERVE_SPA=false
