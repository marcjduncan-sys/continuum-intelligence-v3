{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "script"
  },
  "rules": {
    "no-var": "warn",
    "prefer-const": "warn",
    "eqeqeq": ["warn", "smart"],
    "no-unused-vars": ["warn", { "args": "none", "varsIgnorePattern": "^_" }],
    "no-undef": "off",
    "no-console": "off",
    "curly": ["warn", "multi-line"],
    "no-throw-literal": "warn",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error"
  },
  "overrides": [
    {
      "files": ["src/**/*.js"],
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}
